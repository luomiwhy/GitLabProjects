<idea-plugin>
    <id>com.failfast</id>
    <name>GitLab Projects 2020</name>
    <version>2.0.3</version>
    <vendor email="dairowu@163.com" url="https://github.com/wudeyong/GitLabProjects">Davin</vendor>

    <description><![CDATA[
        <h2>GitLab Projects Plugin</h2>
        <p>Simple plugin that is adding support for GitLab specific actions to JetBrain IDEs</p>
        <h3>Features:</h3>
        <ul>
            <li><b>GitLab Checkout support</b> - add GitLab autocompleter to IDE Git checkout dialog</li>
            <li><b>GitLab Share dialog</b> - allows quick import of new projects to GitLab, user can specify namespace and project visibility</li>
            <li><b>GitLab Merge Request dialog</b> - user can quickly create new merge requests from current branch</li>
            <li><b>GitLab Merge Request List dialog</b> - user can list and accept all open code reviews</li>
        </ul>
        fork from <a href="https://github.com/PavlikPolivka/GitLabProjects">https://github.com/PavlikPolivka/GitLabProjects</a></br>
        <b>github: <a href="https://github.com/wudeyong/GitLabProjects">GitLabProjects</a></b>
    ]]></description>
    GitLabUtil.java
    <change-notes><![CDATA[
        Quick create merge request or list merge request in vcs popup.</br>
        Support idea 2020 and newer version only.</br>
        Fixed duplicated key error when installed GitLabProject.</br>
        Fixed npe for idea 2020.<br>
        List only active projects.<br>
        Changes to the UI of the setting dialog to make it more clear.<br>
        Wording unification with GitHub integration.<br>
    ]]>
    </change-notes>

    <idea-version since-build="201"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>

    <extensions defaultExtensionNs="com.intellij">

        <!-- Configuration state service ( persistable settings ) -->
        <applicationService serviceImplementation="cn.failfast.gitlabprojects.configuration.SettingsState"/>

        <!-- provider for the configurable instance ( configuration settings ) -->
        <projectConfigurable id="GitLabConfigurableProvider"
                             provider="cn.failfast.gitlabprojects.configuration.SettingsConfigurableProvider"
                             parentId="project.propVCSSupport.Mappings" displayName="GitLab"/>

        <projectService serviceImplementation="cn.failfast.gitlabprojects.configuration.ProjectState"/>

    </extensions>

    <extensions defaultExtensionNs="Git4Idea">
        <gitRepositoryHostingService implementation="cn.failfast.gitlabprojects.checkout.GitLabRepositoryHostingService"/>
    </extensions>

    <application-components>

    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <action id="Gitlab.Share" class="cn.failfast.gitlabprojects.share.GitLabShareAction">
            <add-to-group group-id="Vcs.Import"/>
        </action>
        <group id="GitLabGroup" text="Git _Lab" popup="true" icon="/icons/gitLabSmall.png">
            <action id="Gitlab.Create.Merge.Request" class="cn.failfast.gitlabprojects.merge.request.GitLabMergeRequestAction"/>
            <action id="Gitlab.Create.Merge.Request.List" class="cn.failfast.gitlabprojects.merge.list.GitLabMergeRequestListAction"/>

            <add-to-group group-id="Git.Menu"/>
            <add-to-group group-id="Git.ContextMenu"/>
        </group>

        <group id="FastCreateOrListGitlabProject">
            <separator text="gitlab project" />
            <reference ref="Gitlab.Create.Merge.Request"/>
            <reference ref="Gitlab.Create.Merge.Request.List"/>

            <add-to-group group-id="Vcs.Operations.Popup"/>
        </group>

    </actions>

    <depends>Git4Idea</depends>

</idea-plugin>
